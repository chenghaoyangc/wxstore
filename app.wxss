/* 底部 */
.footer{
  background: #fff;
  height: 100rpx;
  overflow: hidden;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  border-top: #eaeaea 1px solid;
 
}

.footer .addtocart{
width: 230rpx;
height: 100rpx;
background: #e53e30;
color: #fff;
font-size: 30rpx;
text-align: center;
line-height: 100rpx;
margin-top: -98rpx;
}

.footer .bynow{
width: 230rpx;
height: 100rpx;
background: #FFB350;
color: #fff;
font-size: 30rpx;
text-align: center;
line-height: 100rpx;
margin-top: -98rpx;
}

.hsc{
  display: flex;
  width: 290rpx;
  text-align: center;
  height: 100rpx;
}


.hsc view{
  width: 96rpx;
  border-right: #ccc 1rpx solid;
}

.hsc-home-img{
 height: 50rpx;
 padding-top: 10rpx;
}
.hsc-home-img image{
  width: 50rpx;
  height: 50rpx;
}
.hsc-home-text{
font-size: 20rpx;
color: #666;
}

.hsc-share{
  position: relative;
}
.hsc-share button{
  width: 96rpx;
  height: 100rpx;
  border: none;
  background: #fff;
  outline: none;
}

.hsc-share button::after{
  border: none;
}

.share-ico{
  position: absolute;
  left:0rpx;
  top:11rpx;
}

.share-ico image{
  width: 50rpx;
  height: 50rpx;
}
.share-text{
  position: absolute;
  font-size: 20rpx;
color: #666;
top:60rpx;

width: 96rpx;
text-align: center;
}
.hsc-cart{
  position: relative;
}

.hsc-cart-img {
  height: 50rpx;
  padding-top: 10rpx;
}

.hsc-cart-img image{
width: 50rpx;
height: 50rpx;
}

.hsc-cart-text{
  font-size: 20rpx;
  color: #666;
}

.hsc-cart .hsc-cart-count{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background: #ff4444;
  right: 10rpx;
  top:5rpx;

  font-family: Arial, Helvetica, sans-serif;
  font-size: 23rpx;
  color: #FFF;

  border-radius: 50%;

  text-align: center;
  line-height: 30rpx;
}

