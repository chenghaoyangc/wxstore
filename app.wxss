/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


/* 畅销书 */
.hostsale-body {
  display: flex;
  justify-content: space-between;
}

.hostsale-item {
  width: 224rpx;
  height: 345rpx;
  background-color: #fff;
  overflow: hidden;
  border-radius: 14rpx;
  text-align: center;
}

.hostsale-item .hostsale-item-img {
  margin-top: 16rpx;
}

.hostsale-item .hostsale-item-img image {
  width: 194rpx;
  height: 194rpx;
}

.hostsale-item .hostsale-item-title {
  font-size: 24rpx;
  color: #484848;
}

.hostsale-item .hostsale-item-price {
  color: #e12616;
  font-size: 24rpx;
}

.hostsale-item .hostsale-item-price text {
  font-size: 32rpx;
}

/* 五星 */

.star-red-25{
width: 24rpx;
height: 24rpx;
margin-left: 2rpx;
}

/* 浮动 */

.fl{
  float:left;
}

.fr{
  float:right;
}

.clear{
  clear: both;
}


/* 搜索 */
.search .search-box {
  width: 730rpx;
  height: 57rpx;
  background-color: #ffb;
  margin: 0 auto;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
}

.search .search-box .ico image {
  width: 27rpx;
  height: 27rpx;
  margin-left: 20rpx;
}

.search .search-box .search-text {
  color: #b2b1b1;
  font-size: 25rpx;
  margin-left: 15rpx;
}

/* 光谷书城  listbook listmovie*/
.move-item{
  border-top:#e4e4e4 1px solid;
}

.movie-box{
  padding: 40rpx 30rpx;
  display: flex;
}

.movie-poster image{
  width: 175rpx;
  height: 228rpx;
}

.movie-info{
  font-size: 23rpx;
  color: #666;
  margin-left: 20rpx;
}

.p-title{
font-size: 28rpx;
color: #000;
padding-bottom: 10rpx;
}

.p-price{
   color: #ff0000;
   font-size: 24rpx;
}

.p-price text{
  font-size:30rpx;
}

.p-comment{
  display: flex;
  
}
.p-comment image{
  width: 24rpx;
height: 24rpx;
margin-left: 2rpx;
}
.p-comment .counts{
  margin-left: 20rpx;
  color: #A7A7A7;
  font-size: 20rpx;
}

